<Window x:Class="WPF_Gra.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game of Life" Height="143" Width="343">
    <Grid Margin="0,0,-8,0" Background="Silver">
        <Button Content="OK" IsDefault="True" HorizontalAlignment="Center" Margin="0,0,0,15" VerticalAlignment="Bottom" Width="75" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" Name="sizeField" Height="23" Margin="0,0,0,0" TextWrapping="Wrap" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Width="51" TextChanged="TextBox_TextChanged"/>
        <TextBlock HorizontalAlignment="Center" Margin="10,24,-19,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348"><Run Language="pl-pl" Text="What shall be the size of the world? (Number from 4 to 15)"/>
        </TextBlock>
    </Grid>
</Window>
